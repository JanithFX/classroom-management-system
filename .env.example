# Environment Configuration for Classroom Management System

# Server Settings
PORT=5000
NODE_ENV=development
HOST=0.0.0.0

# Database
DATABASE_PATH=./data/classroom.db

# API Settings
API_TIMEOUT=5000
MAX_JSON_SIZE=10mb

# CORS Settings
CORS_ORIGIN=*

# Alert Settings
SOUND_THRESHOLD=80
TEMP_HIGH=28
TEMP_LOW=18
HUMIDITY_HIGH=70
HUMIDITY_LOW=30
CO_THRESHOLD=10

# Email Notifications (optional)
ENABLE_EMAIL=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=admin@school.edu

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Data Retention
KEEP_DATA_DAYS=90
AUTO_BACKUP=true
BACKUP_TIME=02:00

# System
TIMEZONE=Asia/Kolkata
SYSTEM_NAME=Classroom Management System
SYSTEM_VERSION=1.0.0
